<!DOCTYPE html>
<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
   {{> adminHeader}}
    <div class="modal-dialog modal-lg" role="document" style="margin-top: 3%; margin-left: 15%">
        <div class="container py-5 modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Edit Trainer: {{aTrainer.name}}</h2>
            </div>
            <div class="modal-body">
                <div class="py-1">
                    <form class="form" action="/admin/adminEditTrainer/doEditTrainer" method="post">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Full Name</label>
                                            <input type="hidden" name="id" value="{{aTrainer._id}}">
                                            <input class="form-control" type="text" name="name" placeholder="Full name" value="{{aTrainer.name}}">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input class="form-control" type="text" placeholder="user@example.com" name ="email" value="{{aTrainer.email}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Speciality</label>
                                            <input class="form-control" type="text" name="speciality"
                                                placeholder="Speciality" value="{{aTrainer.speciality}}">
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Age</label>
                                            <input class="form-control" type="number" name="age" placeholder="18"
                                                min="18" value="{{aTrainer.age}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-3">
                                        <div class="form-group">
                                            <label>Address</label>
                                            <textarea class="form-control" rows="5" placeholder="Address" name="address">{{aTrainer.address}}</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col d-flex justify-content-end">
                                <button class="btn btn-primary" type="submit">Save</button>
                                <a href="/admin" class="btn btn-warning">Cancel</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</body>

</html>