<html lang="en">

{{> head}}

<body class="sb-nav-fixed">
  {{> adminHeader}}
  <div class="container py-5" style="margin-top: 3%; margin-left: 15%">
    <center>
      <div class="form-group">
        <label>Search by Name:</label>
        <div class="input-group">
          <a href="/admin/adminAddTrainer" class="btn btn-success" style="margin-left: 5%;">
            <span class="glyphicon glyphicon-plus"></span>
            <span><strong>Add new account</strong></span>
          </a>
          <input type="search" style="margin-left: 20%; width: 40%;  flex: none;" class="form-control rounded"
            placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
          <hr -3>
          <button type="button" class="btn btn-success">search</button>
        </div>
      </div>
    </center>
    <div class="e-panel card" style="width: 90%; margin-left: 5%">
      <div class="card-body">
        <div class="card-title">
        </div>
        <div class="e-table">
          <div class="table-responsive table-lg mt-3">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Speciality</th>
                  <th>Age</th>
                  <th>Address</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each listTrainer}}
                <tr>
                  <td class="text-nowrap align-middle">{{name}}</td>
                  <td class="text-nowrap align-middle">{{email}}</td>
                  <td class="text-nowrap align-middle"><span>{{speciality}}</span></td>
                  <td class="text-nowrap align-middle">{{age}}</td>
                  <td class="text-nowrap align-middle">{{address}}</td>
                  <td class="text-center align-middle">
                    <div class="btn-group align-top">
                      <a href="/admin/adminEditTrainer?id={{_id}}" class="btn btn-success">
                        <span class="glyphicon glyphicon-edit"></span>
                        <span><strong>Edit</strong></span>
                      </a>
                      <a href="/admin/adminDeleteTrainer?id={{_id}}" class="btn btn-danger" onclick="return confirm('Are you sure')">
                        <span class="glyphicon glyphicon-remove"></span>
                        <span><strong>Delete</strong></span>
                      </a>
                      <a href="#" class="btn btn-warning">
                        <span class="glyphicon glyphicon-cog"></span>
                        <span><strong>Set Default Pass</strong></span>
                      </a>
                    </div>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>